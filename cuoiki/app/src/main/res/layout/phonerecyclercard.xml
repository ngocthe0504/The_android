<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp"
    android:id="@+id/phone_Cardview"
    app:cardElevation="6dp"
    >

    <RelativeLayout
        android:id="@+id/background_color"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        >

        <ImageView
            android:id="@+id/phone_image"
            android:layout_width="160dp"
            android:layout_height="130dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/facebook" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/phone_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Samsung"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phone_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:text="36.990.000"
            android:textColor="#FF0000"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phone_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/phone_note_style"
            android:text="Ưu đãi đối tác 1 triệu"
            android:textAlignment="center"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            >

            <ImageView
                android:id="@+id/phone_start"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/star"
                />

            <ImageView
                android:id="@+id/phone_start2"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/star"

                />

            <ImageView
                android:id="@+id/phone_start3"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/star" />

            <ImageView
                android:id="@+id/phone_start4"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/star" />

            <TextView
                android:id="@+id/phone_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="13 đánh giá"
                android:layout_marginLeft="12dp"
                android:textSize="12dp" />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>