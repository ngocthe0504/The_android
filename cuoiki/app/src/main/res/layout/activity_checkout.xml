<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckoutActivity"
    android:orientation="vertical">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF3333"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/back"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_arrow_back_24"/>
        <TextView
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh toán"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_marginStart="90dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_info_checkout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/round_border2"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="match_parent">
        <ImageView
            android:src="@drawable/map"
            android:layout_margin="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

    </LinearLayout>
    <LinearLayout

        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_checkout"
            android:layout_marginTop="20dp"
            android:text="Nguyễn Hoàng Việt"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/phone_checkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginLeft="200dp"
            android:layout_marginTop="-23dp"
            android:text="0768570252"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address_checkout"
            android:layout_marginTop="20dp"
            android:text="02 Thanh Sơn, Hải Châu, Đà Nẵng"
            android:textColor="@color/black"
            android:textSize="16dp" />

    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/round_border2"
        android:layout_marginTop="160dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sản phẩm "
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"/>
        <ListView
            android:id="@+id/listCheckout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#F4F2F2"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:text="Tổng thanh toán"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txtMoneyCheckout"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:text="200.000 đ"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="22dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/btnCheckout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Đặt hàng"/>





        </LinearLayout>


    </LinearLayout>

</RelativeLayout>